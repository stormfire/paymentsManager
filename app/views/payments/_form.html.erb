<%= form_with(model: payment, url: invoice_payments_path, local: true, :class => "form-horizontal") do |form| %>
  <% if payment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(payment.errors.count, "error") %> prohibited this payment from being saved:</h2>

      <ul>
      <% payment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :amount, :class => "control-label col-sm-2"  %>
    <%= form.number_field :amount, id: :payment_amount %>
  </div>

  <div class="field form-group">
    <%= form.label :date, :class => "control-label col-sm-2"  %>
    <%= form.date_select :date, id: :payment_date %>
  </div>
  
  <div class="field">
      <%= form.hidden_field :invoice_id,value: @invoice.id, id: :invoice %>
    </div>

  <div class="actions form-group">
    <%= form.submit class: "btn btn-primary"%>
  </div>
<% end %>
